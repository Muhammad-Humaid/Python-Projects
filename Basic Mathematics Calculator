def Add():
    Num1 = float(input("Enter The First Number: "))
    Num2 = float(input("Enter The Second Number: "))
    Sum = Num1 + Num2
    return Sum

def Subtract():
    Num1 = float(input("Enter The First Number: "))
    Num2 = float(input("Enter The Second Number: "))
    Difference = Num1 - Num2
    return Difference

def Multiply():
    Num1 = float(input("Enter The First Number: "))
    Num2 = float(input("Enter The Second Number: "))
    Product = Num1 * Num2
    return Product

def Divide():
    Num1 = float(input("Enter The First Number: "))
    Num2 = float(input("Enter The Second Number: "))
    
    if (Num2 == 0):
        print("Cannot divide by zero.")
    
    else:
        Divide = Num1 / Num2
        return Divide


Choice = 0

while (Choice != 5):
    print("Select Your Operations Below: ")
    print()
    print("1. Add\n2. Subtract\n3. Multiply\n4. Divide\n5. Exit")
    print()
    Choice = int(input("Enter Your Choice: "))

    if (Choice == 1):
        Sum = Add();
        print(f"{Sum}\n")
    elif (Choice == 2):
        Sub = Subtract();
        print(f"{Sub}\n")
    elif (Choice == 3):
        Prod = Multiply();
        print(f"{Prod}\n")
    elif (Choice == 4):
        Div = Divide();
        print(f"{Div}\n")    
    elif (Choice == 5):
        break
    else:
        print("Invalid Choice! Please Try Again.")
        print()

print("You Have Decided To Exit, See You Again!")
        
