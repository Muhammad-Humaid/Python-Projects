import random

Choice = 0

print("Welcome To Toss Simulator!\n\n1. Toss\n2. Exit ")


while (Choice!=2):
    Choice = int(input("Enter Your Choice: "))
    
    
    if (Choice == 1): 
        print()
        print("Tossing The Coin For You...")
        print()
        print(f"The Coin Fell, And '{random.choice(['Heads','Tails'])}' Is It...")
        print()
    elif (Choice != 1) and (Choice != 2):
        print("Invalid Choice, Please Try Again.")
    else:
        print()
        break
    
print("Program Exited Successfully.")
        


